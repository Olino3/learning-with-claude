<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo App - Sinatra Lab</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <div class="navbar-brand">
        <h1>üìù Todo App</h1>
      </div>
      <div class="navbar-menu">
        <a href="/tasks" class="<%= nav_active('/tasks') %>">Tasks</a>
        <a href="/tasks/new" class="btn btn-primary">+ New Task</a>
      </div>
    </div>
  </nav>

  <main class="container">
    <%= flash_messages %>
    <%= yield %>
  </main>

  <footer class="footer">
    <div class="container">
      <p>
        Built with <strong>Sinatra</strong> |
        Lab 1: Todo Application |
        <a href="https://github.com/sinatra/sinatra" target="_blank">Learn More</a>
      </p>
    </div>
  </footer>

  <script>
    // Auto-dismiss alerts after 5 seconds
    setTimeout(() => {
      const alerts = document.querySelectorAll('.alert');
      alerts.forEach(alert => {
        alert.style.opacity = '0';
        setTimeout(() => alert.remove(), 300);
      });
    }, 5000);

    // Confirm delete actions
    document.querySelectorAll('form[method="post"] input[name="_method"][value="delete"]').forEach(input => {
      const form = input.form;
      if (!form || form.dataset.deleteConfirmBound === 'true') return;
      form.dataset.deleteConfirmBound = 'true';
      form.addEventListener('submit', (e) => {
        if (!confirm('Are you sure you want to delete this task?')) {
          e.preventDefault();
        }
      });
    });
  </script>
</body>
</html>
