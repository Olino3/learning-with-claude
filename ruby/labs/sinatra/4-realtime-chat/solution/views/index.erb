<div class="min-h-[calc(100vh-12rem)] flex items-center justify-center px-4 py-12">
  <div class="max-w-6xl w-full">
    <!-- Welcome Card -->
    <div class="bg-white rounded-2xl shadow-2xl overflow-hidden mb-12">
      <div class="bg-gradient-to-r from-primary to-secondary p-1">
        <div class="bg-white p-8 md:p-12 text-center">
          <div class="mb-6">
            <i class="fas fa-comments text-6xl text-primary mb-4 inline-block"></i>
            <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">
              Welcome to Real-time Chat!
            </h1>
            <p class="text-xl text-slate-600 max-w-2xl mx-auto">
              Join the conversation and connect with others instantly using WebSocket technology
            </p>
          </div>

          <% if @error %>
            <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-r-lg">
              <div class="flex items-center">
                <i class="fas fa-exclamation-circle mr-2"></i>
                <span><%= h(@error) %></span>
              </div>
            </div>
          <% end %>

          <form action="/username" method="post" class="max-w-md mx-auto">
            <div class="mb-6 text-left">
              <label for="username" class="block text-sm font-semibold text-slate-700 mb-2">
                <i class="fas fa-user mr-2 text-primary"></i>Choose your username
              </label>
              <input type="text" id="username" name="username"
                     class="w-full px-4 py-3 rounded-lg border-2 border-slate-300 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all text-lg"
                     placeholder="Enter your username"
                     required autofocus minlength="2" maxlength="20">
              <p class="mt-2 text-sm text-slate-500">
                <i class="fas fa-info-circle mr-1"></i>2-20 characters, will be visible to other users
              </p>
            </div>

            <button type="submit" class="w-full bg-gradient-to-r from-primary to-secondary hover:from-secondary hover:to-primary text-white font-bold py-4 px-6 rounded-lg transition-all transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center justify-center space-x-2">
              <span class="text-lg">Join Chat</span>
              <i class="fas fa-arrow-right"></i>
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow border border-slate-100">
        <div class="w-14 h-14 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center mb-4">
          <i class="fas fa-bolt text-2xl text-white"></i>
        </div>
        <h3 class="text-lg font-bold text-slate-900 mb-2">Instant Messaging</h3>
        <p class="text-slate-600 text-sm">Real-time message delivery with WebSocket technology</p>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow border border-slate-100">
        <div class="w-14 h-14 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center mb-4">
          <i class="fas fa-door-open text-2xl text-white"></i>
        </div>
        <h3 class="text-lg font-bold text-slate-900 mb-2">Multiple Rooms</h3>
        <p class="text-slate-600 text-sm">Join different chat rooms for various topics</p>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow border border-slate-100">
        <div class="w-14 h-14 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center mb-4">
          <i class="fas fa-users text-2xl text-white"></i>
        </div>
        <h3 class="text-lg font-bold text-slate-900 mb-2">User Presence</h3>
        <p class="text-slate-600 text-sm">See who's online in each room</p>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow border border-slate-100">
        <div class="w-14 h-14 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center mb-4">
          <i class="fas fa-history text-2xl text-white"></i>
        </div>
        <h3 class="text-lg font-bold text-slate-900 mb-2">Message History</h3>
        <p class="text-slate-600 text-sm">View previous messages when you join</p>
      </div>
    </div>

    <!-- Rooms Preview -->
    <div class="bg-white rounded-2xl shadow-xl p-8 md:p-12">
      <h2 class="text-3xl font-bold text-slate-900 mb-8 text-center flex items-center justify-center">
        <i class="fas fa-door-open text-primary mr-3"></i>
        Available Chat Rooms
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <% @rooms.each do |room| %>
          <div class="border-2 border-slate-200 rounded-xl p-6 hover:border-primary transition-colors">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-lg flex items-center justify-center flex-shrink-0">
                <i class="fas fa-hashtag text-xl text-white"></i>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-slate-900 mb-1"><%= h(room.name) %></h3>
                <p class="text-slate-600 text-sm mb-3"><%= h(room.description) %></p>
                <div class="flex items-center text-sm text-slate-500">
                  <i class="fas fa-comments text-primary mr-1"></i>
                  <span><%= room.messages.count %> messages</span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <p class="text-center text-slate-500 text-lg">
        <i class="fas fa-arrow-up mr-2"></i>
        Enter a username above to join the chat!
      </p>
    </div>
  </div>
</div>
