<div class="profile-page">
  <div class="page-header">
    <h1>Your Profile</h1>
    <a href="/profile/edit" class="btn btn-primary">Edit Profile</a>
  </div>

  <div class="profile-grid">
    <div class="profile-main">
      <div class="profile-card">
        <div class="profile-avatar">
          <%= current_user.name.split.map(&:chr).join.upcase %>
        </div>
        <h2><%= h(current_user.name) %></h2>
        <p class="profile-email"><%= h(current_user.email) %></p>
      </div>

      <div class="profile-info">
        <h3>Account Information</h3>

        <div class="info-row">
          <div class="info-label">Full Name</div>
          <div class="info-value"><%= h(current_user.name) %></div>
        </div>

        <div class="info-row">
          <div class="info-label">Email Address</div>
          <div class="info-value"><%= h(current_user.email) %></div>
        </div>

        <div class="info-row">
          <div class="info-label">Member Since</div>
          <div class="info-value"><%= format_date(current_user.created_at) %></div>
        </div>

        <div class="info-row">
          <div class="info-label">Last Login</div>
          <div class="info-value">
            <%= current_user.last_login_at ? format_date(current_user.last_login_at) : 'First login' %>
          </div>
        </div>

        <div class="info-row">
          <div class="info-label">Profile Updated</div>
          <div class="info-value"><%= format_date(current_user.updated_at) %></div>
        </div>
      </div>
    </div>

    <div class="profile-sidebar">
      <div class="sidebar-section">
        <h3>Account Status</h3>
        <div class="status-list">
          <div class="status-item status-active">
            <span class="status-dot"></span>
            <span>Account Active</span>
          </div>
          <div class="status-item status-verified">
            <span class="status-dot"></span>
            <span>Email Verified</span>
          </div>
          <% if current_user.remember_token %>
            <div class="status-item status-remembered">
              <span class="status-dot"></span>
              <span>Remember Me Active</span>
            </div>
          <% end %>
        </div>
      </div>

      <div class="sidebar-section">
        <h3>Quick Actions</h3>
        <div class="quick-actions">
          <a href="/profile/edit" class="action-btn">
            ‚úèÔ∏è Edit Profile
          </a>
          <a href="/dashboard" class="action-btn">
            üìä Dashboard
          </a>
          <a href="/logout" class="action-btn danger">
            üö™ Logout
          </a>
        </div>
      </div>

      <div class="sidebar-section">
        <h3>Security</h3>
        <p class="security-text">
          Your password is encrypted using BCrypt. We never store passwords
          in plain text.
        </p>
        <a href="/profile/edit#change-password" class="btn btn-secondary btn-block">
          Change Password
        </a>
      </div>
    </div>
  </div>
</div>
